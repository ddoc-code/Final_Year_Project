<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.eventDetail.EventDetailFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:id="@+id/event_detail_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="EVENT VENUE"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:text="EVENT TITLE"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="EVENT DESCRIPTION" />

            <TextView
                android:id="@+id/event_detail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/event_details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="EVENT DATE" />

            <TextView
                android:id="@+id/event_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT TIME" />

            <TextView
                android:id="@+id/event_detail_ticketsNeeded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TICKETS NEEDED" />

            <TextView
                android:id="@+id/event_detail_ticketPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKET PRICE" />

            <TextView
                android:id="@+id/event_detail_ticketsPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKETS PAGE" />

            <TextView
                android:id="@+id/event_detail_venue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="EVENT VENUE 2" />

            <TextView
                android:id="@+id/event_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT ADDRESS" />

            <Button
                android:id="@+id/event_detail_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/button_viewGroups" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>